	public String add(){
		String newId=gnflService.newId("");
		gnfl=new Gnfl();
		gnfl.setFlmc(flmc);
		gnfl.setFlbm(newId);
		gnfl.setFlxh(Integer.parseInt(flxh));
		gnflService.add(gnfl);
		return "add";
	}
	
	public String update(){
